include include/mixins/menu.pug

doctype html
html(lang="ru")
  include include/head.pug
  body.bg-extra-light.small
    .container-xxl
      .row 
        .col-3.vh-100.pt-4.bg-white.d-none.d-lg-block
          a.navbar-brand(href="#")
            img.mt-1(src="./images/logo.svg", alt="work5 logo")
          nav
            +createMenu(menu)
        .col-12.col-lg-9.position-relative
          include include/components/popup.pug
          .row.d-lg-none
            .col-12.bg-white.ps-3.pe-3 
              nav.navbar  
                a.navbar-brand(href="#")
                  img.mt-1(src="./images/logo.svg", alt="work5 logo")
                button.navbar-toggler.shadow-none(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNavAltMarkup", aria-controls="navbarNavAltMarkup", aria-expanded="false", aria-label="Toggle navigation")
                  span.navbar-toggler-icon    
                .collapse.navbar-collapse(id="navbarNavAltMarkup")
                  .navbar-nav.ps-3
                    +createMenu(menu)
          .row.ps-3.ps-xxl-5 
            .col.d-flex.justify-content-between.flex-column.flex-md-row
              .pt-3.pt-lg-4.order-2.order-md-1.mb-4.mb-md-0
                nav.crumbs 
                  ol.breadcrumb
                    li.breadcrumb-item
                      a(href="#") Главная
                    li.breadcrumb-item.active Мои магазины
              .pt-3.pt-lg-4.pe-3.order-1.order-md-2.header
                .message.unread
                  img.envelope(src="./images/envelope.svg", alt="envelope")
                  img.dot(src="./images/red-circle.svg", alt="red dot")
                .profile
                  img.avatar(src="./images/photo.jpg", alt="avatar")
                  span Максим Добжанский
          .row.ps-3.ps-xxl-5 
            .col 
              include include/mixins/button.pug 
              +button("./images/plus.svg", "Создать свой магазин", "btn-green", "open-popup")
          .row.ps-3.ps-xxl-5 
            .col
              h1.h5.mt-5.mb-4.text-dark Управление магазинами
              .shop-table.ps-lg-8.pe-lg-8.ps-2.pe-2
                include include/mixins/shop-table.pug
                +createShopTable(shopsData)
    script(src="js/bootstrap.min.js")
